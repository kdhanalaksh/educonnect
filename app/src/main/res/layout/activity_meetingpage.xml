<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F0FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title and Timer -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/meeting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent-Teacher Meeting"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45:23"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <!-- Video Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="#CCCCCC">

            <!-- Teacher Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:scaleType="centerCrop"
                android:src="@drawable/meeting" />

            <!-- Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mrs. Sarah Wilson"
                android:textColor="#FFFFFF"
                android:background="#80000000"
                android:padding="4dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="8dp" />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="2dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/meeting" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You (Parent)"
                    android:textSize="10sp"
                    android:gravity="center" />
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 participants"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Sample participant -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/profiles"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parent 1"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Repeat above LinearLayout for other participants -->
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:weightSum="6">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="2"
                android:background="@null"
                android:contentDescription="Mute"
                android:src="@drawable/mute" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="Video"
                android:src="@drawable/video" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="Share"
                android:src="@drawable/share" />

            <ImageButton
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="Participants"
                android:src="@drawable/participants" />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/more"
                android:contentDescription="More"
                android:background="@null" />
        </LinearLayout>

        <!-- Leave Meeting Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Meeting"
            android:textColor="#FFFFFF"
            android:backgroundTint="#EF4444"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
