<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="#E6F0FF">

    <!-- Top Title Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#004080"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Profile"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Profile Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/profiles"
                android:contentDescription="Profile Picture"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"/>

            <!-- Student Info -->
            <TextView
                android:id="@+id/tvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: Loading..."
                android:textSize="16sp"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Loading..."
                android:textSize="16sp"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: Loading..."
                android:textSize="16sp"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact: Loading..."
                android:textSize="16sp"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender: Loading..."
                android:textSize="16sp"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/tvTeacherId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher ID: Loading..."
                android:textSize="16sp"
                android:padding="6dp"/>

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:backgroundTint="#004080"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:drawableLeft="@android:drawable/ic_menu_edit"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
