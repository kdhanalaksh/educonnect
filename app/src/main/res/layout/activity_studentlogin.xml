<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/studentlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6E8FC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/studentloginbackbtn"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_gravity="start"
            android:contentDescription="@string/back"
            android:src="@drawable/left_arrow" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/login_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_login"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_login"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/menuback"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginTop="9dp"
            android:hint="@string/email_address"
            android:autofillHints="emailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/menuback"
                android:padding="12dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:hint="@string/password"
                android:autofillHints="password" />
        </RelativeLayout>

        <Button
            android:id="@+id/loginButtonstudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="#2366B1"
            android:layout_marginTop="98dp"
            android:padding="12dp" />

        <TextView
            android:id="@+id/forgetpasswordstudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/signinstudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
