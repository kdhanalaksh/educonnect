<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F0FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left_arrow"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Announcement"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textSize="16sp"
                android:textColor="#007AFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Select Class -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select class"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/spinner_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuback"
            android:padding="12dp"
            />

        <!-- Announcement Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Announcement Type"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Notice"
                android:backgroundTint="#007AFF"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test/Quiz"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/announcement_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter announcement title"
            android:background="@drawable/menuback"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Content -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/announcement_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Write your announcement here..."
            android:background="@drawable/menuback"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />

        <!-- Preview Button -->
        <Button
            android:id="@+id/btn_preview_announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preview Announcement"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#007AFF"
            android:background="@drawable/blue"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
