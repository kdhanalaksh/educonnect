<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F0FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/left_arrow"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Assignment"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Select Class -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select class"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/spinner_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menuback"
            android:padding="12dp"/>

        <!-- Assignment Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Title"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/assignment_title"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/menuback"
            android:hint="Enter assignment title"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Due Date & Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date and Time"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_due_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:padding="12dp"
                android:text="Feb 15, 2024"
                android:textColor="#000000" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_due_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:padding="12dp"
                android:text="11:59 PM"
                android:textColor="#000000" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Type"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="#007AFF"
                android:text="Homework"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="#FFFFFF"
                android:text="Quiz"
                android:textColor="#000000" />

            <Button
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="#FFFFFF"
                android:text="Project"
                android:textColor="#000000" />

            <Button
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="#FFFFFF"
                android:text="Other"
                android:textColor="#000000" />

        </GridLayout>

        <!-- Post Assignment Button -->
        <Button
            android:id="@+id/btn_post_assignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Assignment"
            android:layout_marginTop="24dp"
            android:backgroundTint="#007AFF"
            android:textColor="#FFFFFF"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
