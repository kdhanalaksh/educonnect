<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/teacherloginerrorpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F0FF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ✅ Add ID for back arrow -->
        <ImageView
            android:id="@+id/backArrowBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/left_arrow"
            android:contentDescription="Back"
            android:layout_gravity="start"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="152dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:src="@drawable/loginerror" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="Login Failed"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="The email or password you entered is incorrect. Please try again."
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- ✅ Add ID for try again button -->
        <Button
            android:id="@+id/tryAgainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#007BFF"
            android:text="Try Again"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:text="Need help?"
            android:textColor="#007BFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- ✅ Add ID for forgot password text -->
        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Forgot Password?"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Contact support:\nsupport@schoolapp.com"
            android:textColor="#444444"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
