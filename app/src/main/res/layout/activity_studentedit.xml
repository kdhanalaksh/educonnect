<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#E6F0FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŸ¨ Cancel"
                android:textColor="#004080"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#004080"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/editProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:contentDescription="Profile Picture"
            android:src="@drawable/profiles"
            android:scaleType="centerCrop" />

        <!-- Editable Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/menuback"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <!-- ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/editId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/greys"
                android:hint="Enter Student ID"
                android:padding="10dp"
                android:textColor="#000" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/greys"
                android:hint="Enter Name"
                android:padding="10dp"
                android:textColor="#000" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/greys"
                android:hint="Enter Email"
                android:padding="10dp"
                android:textColor="#000"
                android:inputType="textEmailAddress" />

            <!-- Contact -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Contact Number"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/editContact"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/greys"
                android:hint="Enter Contact Number"
                android:padding="10dp"
                android:textColor="#000"
                android:inputType="phone" />

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Gender"
                android:textStyle="bold"
                android:textColor="#000" />

            <RadioGroup
                android:id="@+id/editGenderGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="#000" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="#000"
                    android:layout_marginStart="16dp" />

                <RadioButton
                    android:id="@+id/rbOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textColor="#000"
                    android:layout_marginStart="16dp" />
            </RadioGroup>

            <!-- Teacher ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Teacher ID"
                android:textStyle="bold"
                android:textColor="#000" />

            <EditText
                android:id="@+id/editTeacherId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/greys"
                android:hint="Enter Teacher ID"
                android:padding="10dp"
                android:textColor="#000" />

        </LinearLayout>

        <!-- Delete Account -->
        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:backgroundTint="#FF3B30"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
